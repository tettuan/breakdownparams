{
  "name": "@tettuan/breakdownparams",
  "version": "0.1.2",
  "description": "A utility to parse and validate command line arguments with type safety",
  "repository": "https://github.com/tettuan/breakdownparams",
  "exports": "./mod.ts",
  "tasks": {
    "test": "deno test --allow-read",
    "check": "deno check **/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "fmt": {
    "include": ["src/", "mod.ts", "tests/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "include": ["src/", "mod.ts", "tests/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "lib": ["deno.window", "deno.ns"]
  },
  "publish": {
    "include": ["src/", "mod.ts", "README.md", "LICENSE", "deno.json"],
    "exclude": ["tests/", ".github/"]
  },
  "runtimes": ["deno", "node"]
} 